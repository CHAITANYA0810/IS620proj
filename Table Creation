Set Serveroutput on;

drop table Products;
drop table Product_Category;

Create table Product_Category(
    pcid number,
    pcName varchar(30),
    pcDesc varchar(100),
    primary key (pcid)
);

Create table Products(
    productid number,
    pcid number,
    pname varchar(30),
    avail_quant number,
    unitprice number,
    primary key (pid),
    foreign key (pcid) references Product_Category(pcid)
);

desc Product_Category;
desc Products;
